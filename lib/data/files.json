{
  "presets": [
    {
      "name": "webpack.analyze.js",
      "dependencies": "webpack-bundle-analyzer",
      "script": {
        "analyze:server": "webpack --env.presets analyze --env.type server",
        "analyze:static": "webpack --env.presets analyze --env.type static"
      }
    }
  ],
  "boilerplates": {
    "minimial": {
      "devDependencies": [
        "css-loader",
        "style-loader"
      ],
      "dependencies": [
       "mini-css-extract-plugin",
       "optimize-css-assets-webpack-plugin"
      ],
      "presets": ["webpack.analyze.js"]
    }
  },
  "scripts": {
    "dev": "webpack-dev-server --hot --env.mode development --env.port 3000",
    "build": "webpack --env.mode production --progress"
  },
  "devDependencies": [
    "webpack",
    "webpack-cli",
    "webpack-dev-server",
    "webpack-merge",
    "clean-webpack-plugin"
  ],
  "dependencies": [
    "babel-loader",
    "babel-core",
    "babel-preset-env"
  ]
}
